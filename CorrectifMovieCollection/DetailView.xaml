<Window x:Class="CorrectifMovieCollection.DetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CorrectifMovieCollection"
        mc:Ignorable="d"
        Title="DetailView" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="{Binding Title}"></Label>
            <Label Content="{Binding ReleaseYear}"></Label>
            <Label Content="{Binding Realisator}"></Label>
            <Label Content="{Binding Synopsis}"></Label>
        </StackPanel>
    </Grid>
</Window>
